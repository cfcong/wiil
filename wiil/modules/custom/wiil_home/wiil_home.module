/**
 *	Implements hook_block_view().
 */
function wiil_home_block_view($delta = '') {
	$block = array();

	switch ($delta) {
		case 'brand_1' :
			$block['content'] = ' ';
			break;
		case 'brand_2' :
			$block['content'] = ' ';
			break;
		case 'brand_3' :
			$block['content'] = ' ';
			break;
	}

	return $block;

}