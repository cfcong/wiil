/**
 * Callback function for home page.
 */
function wiil_home_page() {
	return theme('home');
}

/**
 * Implements hook_theme().
 */
function wiil_home_theme() {
	$items = array();

	$items['home'] = array(
		'template' => 'templates/wiil-home',
	);

	return $items;
}

